<nav class="navbar navbar-expand-sm bg-dark navbar-dark sticky-top">
  <%= link_to root_path, class: 'navbar-brand' do %>
    <%= image_tag 'logo.png', class: 'mx-auto d-block logo-icon' %>
  <% end %>
  <ul class="navbar-nav">
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
          <%= @current_user&.fullname || 'Account' %>
        </a>
        <div class="dropdown-menu">
          <% if @current_user %>
          <%= link_to 'Logout', logout_path, method: :delete, class: 'dropdown-item' %>
          <% else %>
            <a class="dropdown-item" href="#" data-toggle="modal" data-target="#loginModal">Login</a>
            <a class="dropdown-item" href="#" data-toggle="modal" data-target="#registerModal">Register</a>
          <% end %>
        </div>
      </li>
  </ul>
</nav>
<br>
